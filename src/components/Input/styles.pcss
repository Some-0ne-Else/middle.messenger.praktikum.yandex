.input{
  display: flex;
  flex-direction: column;
}

.input__label{
  text-align:left;
  font-family: $fontFamily;
  font-weight: 500;
  font-size: 9px;
  line-height: 9px;
  color: $secondaryColor;
  margin-top: 16px;
}

.input__input{
  margin-top: 8px;
  width: 100%;
  border: 0;
  border-bottom: 1px solid #3369F3;
  outline: none;
}

.input__input_error{
  color: red;
  border-bottom: 1px solid red;
}
